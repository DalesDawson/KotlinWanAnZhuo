<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daledawson.demo">
    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.daledawson.demo.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">
        <activity android:name="com.daledawson.demo.activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.daledawson.demo.activity.MainActivity" />
        <activity android:name="com.daledawson.demo.activity.CommonWebViewActivity" />
        <activity android:name="com.daledawson.demo.activity.SystemListActivity" />
        <activity android:name="com.daledawson.demo.activity.SearchListActivity" />
        <activity android:name="com.daledawson.demo.activity.LoginActivity" />
        <activity android:name="com.daledawson.demo.activity.RegisterActivity" />
        <activity android:name="com.daledawson.demo.activity.CollectionActivity" />
    </application>

</manifest>